{
  "name": "cctop",
  "version": "0.1.0",
  "description": "A simple web monitoring tools for Claude Code sessions",
  "author": "wangyufeng",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "monitoring",
    "process-monitor",
    "cli-tool",
    "websocket",
    "real-time"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wangyufeng0615/cctop.git"
  },
  "bugs": {
    "url": "https://github.com/wangyufeng0615/cctop/issues"
  },
  "homepage": "https://github.com/wangyufeng0615/cctop#readme",
  "bin": {
    "cctop": "./cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "cli.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "NODE_ENV=development tsx src/index.ts",
    "prebuild": "npm run clean",
    "build": "vite build && tsc -p tsconfig.server.json",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'web/src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' 'web/src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}' 'web/src/**/*.{ts,tsx,css}' '*.{json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}' 'web/src/**/*.{ts,tsx,css}' '*.{json,md}'",
    "prepublishOnly": "npm run lint && npm run build",
    "clean": "rm -rf dist/ cctop-*.tgz",
    "package": "npm run clean && npm run build && npm pack",
    "package:local": "npm run package && echo '✅ Package created: cctop-*.tgz'",
    "package:test": "npm run package && npm install -g ./cctop-*.tgz --force && echo '✅ Installed globally for testing'"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "express": "^4.18.2",
    "get-port": "^7.1.0",
    "open": "^10.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.8"
  }
}
